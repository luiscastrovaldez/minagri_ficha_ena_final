<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titulo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="titulo_3" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="titulo_principal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#F8FBF8</item>
        <item name="android:textSize">24dp</item>
        <item name="android:background">@color/tablerow_background_titulo</item>
    </style>

    <style name="subtitulo_principal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#F8FBF8</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/tablerow_background_titulo</item>

    </style>

    <style name="subtitulo_principal_1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#F8FBF8</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/tablerow_background_contenido_1</item>

    </style>

    <style name="titulo_pregunta" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0B680B</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">#0B680B</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/white</item>
    </style>


</resources>